<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <definition name="common" template="/WEB-INF/layout/classic.jsp">
        <put-attribute name="header" value="/WEB-INF/layout/header.jsp" />
        <put-attribute name="footer" value="/WEB-INF/layout/footer.jsp" />
    </definition>
  
    <definition name="main" extends="common">
        <put-attribute name="title" value="Login Application" />
        <put-attribute name="body" value="/WEB-INF/views/mainPage.jsp" />
        <put-attribute name="current" value="main" />
    </definition>
  
    <definition name="registerUser" extends="common">
        <put-attribute name="title" value="User Registration Page" />
        <put-attribute name="body" value="/WEB-INF/views/registerUser.jsp" />
        <put-attribute name="current" value="registerUser" />
    </definition>
    
    <definition name="login" extends="common">
        <put-attribute name="title" value="User Login Page" />
        <put-attribute name="body" value="/WEB-INF/views/login.jsp" />
        <put-attribute name="current" value="login" />
    </definition>
  
    <definition name="users" extends="common">
        <put-attribute name="title" value="Users " />
        <put-attribute name="body" value="/WEB-INF/views/userList.jsp" />
        <put-attribute name="current" value="users" />
    </definition>
    
   
  
</tiles-definitions>